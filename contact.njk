{% extends "_layout.njk" %}

{% block content %}

 <section class="hero givespace">
  <div class="hero-body">
    <div class="container center">
      <h1 class="title headers lightspeed">
       {{ site.contact }}
      </h1>
    </div>
  </div>
</section>

<section class="container center ">
  <p class="subtitle has-text-centered subheadpink contactpull slideleft hide dl1">Call, text,send an email, beep, write a letter, or even send a message via horse drawn carraige. Whatever your method, here's the info you'll need to get a hold of me.</p>
</section>

<section class="container center has-text-centered">
      <ul class="column bodytextdark contactinfo">
        <li class="tada2 dl2"><strong>Phone Number:</strong> {{ site.phone }}</li>
        <li class="tada2 dl3"><strong>Email:</strong> {{ site.email }}</li>
        <li class="tada2 dl4"><strong>Address: 1310 N Samantha Rd.</strong> (for the horse drawn carriage)</li>
      </ul>
</section>

 <section class="hero dmb">
  <div class="hero-body">
    <div class="container center">
      <h1 class="title headerslight slideright">
       Direct Message Me
      </h1>
    </div>
  </div>
</section>

<main class="fieldsbkg">
  
  <section class="container dm slideleft">

    <div class="field">
      <label class="label subheadpink">Name</label>
      <div class="control">
        <input class="input bodytextdark" type="text" placeholder="e.g. Joe Mama">
      </div>
    </div>

    <div class="field">
      <label class="label subheadpink">Email</label>
      <p class="control">
        <input class="input bodytextdark" type="email" placeholder="e.g. joemama34@gmail.com">
      </p>
    </div>

    <div class="field">
      <div class="label">
        <label class="label subheadpink">Message</label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <textarea class="textarea bodytextdark" placeholder="e.g. My name is Joe, I think your work is awesome! Let's work together."></textarea>
          </div>
        </div>
      </div>
    </div>

    <div class="control center">
      <button class="button is-danger is-rounded is-medium subheadwhite"><strong>Submit</strong></button>
    </div>

  </section>
</main>
{% endblock %}