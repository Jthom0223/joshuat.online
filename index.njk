{% extends "_layout.njk" %}

{% block content %}
  <!--  Your Progressive Web App   -->


    <section class="section-padding-large">
        <div id="top" class="columns">
          <div class="column">
            <h1 id="name" class="column">  {% for name in posts.homepage %}
    {{ content.name }}
  {% endfor %}</h1>
            <a class="button center column is-2 is-rounded is-danger is-medium subheadwhite">
            <strong>See Portfolio</strong>
            </a>
          </div>
        </div>
    </section>
    <div class="has-text-centered pi headers">
        <h1>Personal Info</h1>
    </div>
    <div id="personal-info" class="columns is-multiline">
      
      <ul class="column is-4 is-offset-3">
        <li><strong class="bodytext">Name:</strong> {{ site.name }}</li>
        <li><strong class="bodytext">Address:</strong> {{ site.address }}</li>
        <li><strong class="bodytext">Phone Number:</strong> {{ site.phone }}</li>
        <li><strong class="bodytext">Email:</strong> {{ site.email }}</li>
      </ul>
      <ul class="column is-4">
        <li><strong class="bodytext">Favorite Color:</strong> Black, because it is most dominant and contains all other colors.</p>
        <li>Twitter</li>
        <li>Facebook</li>
        <li>Instagram</li>
      </ul>
      <div class="column center socialmedia">
        
        <span class="icon">
          <a href="#" class="smc"><i class="fab fa-twitter fa-2x"></i></a>
        </span>
        
        <span class="icon">
          <a href="#" class="smc"><i class="fab fa-instagram fa-2x"></i></a>
        </span>
        
        <span class="icon">
          <a href="#" class="smc"><i class="fab fa-facebook fa-2x"></i></a>
        </span>
        
      </div>
    </div>

    <section class="section center headers">
      <h1>Spotlight</h1>
    </section>

    <div id="spotlight" class="columns">
  <!-- Card 1 -->    
